---
import Card from '../components/Card.astro'
import Layout from '../layouts/Layout.astro'
const response = await fetch('https://music-api.charca.workers.dev/albums')
const albums = await response.json()
---

<Layout title="Astro Records">
  <div class=" w-full bg-black lg:px-0 flex items-center flex-wrap">
    <div class="relative flex overflow-x-hidden scrollbar-hide">
      <div class="animate-marquee whitespace-nowrap ">
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
      </div>
      <div class="absolute top-0 animate-marquee2 whitespace-nowrap">
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
        <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
      </div>
    </div>
  </div>
  <img
        class="w-full card-image rounded-md relative z-10"
        src="covers/buenos-aires.jpg"
        alt="Buenos Aires"
      />
      <div class=" w-full bg-black lg:px-0 flex items-center flex-wrap">
        <div class="relative flex overflow-x-hidden scrollbar-hide">
          <div class="animate-marquee whitespace-nowrap ">
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
          </div>
          <div class="absolute top-0 animate-marquee2 whitespace-nowrap">
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">Y conocerán la verdad, y la verdad los hará libres  Juan 8:32</span>
            <span class="text-base lg:text-4xl mx-7 font-thin text-white font-mono">ESPERANZA EN BUENOS AIRES</span>
          </div>
        </div>
      </div>
  <section class="py-8">
    <div
      class="container mx-auto max-w-screen-lg px-6 lg:px-0 flex items-center flex-wrap pt-4 pb-12"
    >
      <h2 class="font-bold text-3xl text-black tracking-tight mb-12">
        Cursos Bíblicos
      </h2>

      <div class="w-full grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
        {
          albums.results.map((album) => (
            <Card
              id={album.idAlbum}
              name={album.strAlbum}
              artist={album.strArtist}
              image_url={album.strAlbumThumb}
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
