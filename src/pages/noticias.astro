<Layout title="Noticias">

  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4 md:p-6 mb-14">
      <div class="border bg-card text-card-foreground rounded-lg overflow-hidden shadow-lg" data-v0-t="card">
        <a class="absolute inset-0 z-10" href="#">
